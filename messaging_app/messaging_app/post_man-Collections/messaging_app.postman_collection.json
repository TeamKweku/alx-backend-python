					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"participants_id\": [\"user_id1\", \"user_id2\"],\n    \"initial_message\": \"Hello, let's start a conversation!\"\n}",
