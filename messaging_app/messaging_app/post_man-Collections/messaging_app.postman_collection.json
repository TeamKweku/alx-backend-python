		{
			"name": "Messages",
			"item": [
				{
					"name": "List Messages",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/messages/?page=1",
							"host": ["{{base_url}}"],
							"path": ["api", "messages"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "conversation",
									"value": "{{conversation_id}}",
									"disabled": true
								},
								{
									"key": "start_date",
									"value": "2024-01-01T00:00:00Z",
									"disabled": true
								},
								{
									"key": "end_date",
									"value": "2024-12-31T23:59:59Z",
									"disabled": true
								}
							]
						}
					}
				},
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"conversation\": \"{{conversation_id}}\",\n    \"message_body\": \"Hello, this is a test message!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/messages/",
							"host": ["{{base_url}}"],
							"path": ["api", "messages"]
						}
					}
				},
				{
					"name": "Get Conversation Messages",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/conversations/{{conversation_id}}/messages/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", "{{conversation_id}}", "messages"]
						}
					}
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (pm.response.code === 200 && pm.response.json().access) {",
					"    pm.environment.set('access_token', pm.response.json().access);",
					"    pm.environment.set('refresh_token', pm.response.json().refresh);",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
